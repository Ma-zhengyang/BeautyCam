<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.mazhengyang.beautycam.CameraActivity">

    <com.android.mazhengyang.beautycam.ui.CameraView
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.android.mazhengyang.beautycam.ui.CameraView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/take_photo_button"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bd_ocr_take_photo_selector"
            android:clickable="true" />

        <ImageView
            android:id="@+id/reverse"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_camera_front_bb_white_24dp"
            android:clickable="true" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/sobel_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

</FrameLayout>
