<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    android:orientation="vertical"
    tools:context="com.android.mazhengyang.beautycam.CameraActivity">

    <TextureView
        android:id="@+id/camera_textureview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/focus_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@drawable/camera_focus_start"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/snap_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

    <include layout="@layout/camera_top_layout" />
    <include layout="@layout/camera_bottom_layout" />

</FrameLayout>
